{
  "family": "dbt-fastapi-task",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "dbt-fastapi-container",
      "image": "<your-docker-image-uri>",
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 8000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "memory": 512,
      "cpu": 256
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "<your-ecs-execution-role-arn>",
  "taskRoleArn": "<your-ecs-task-role-arn>"
} 